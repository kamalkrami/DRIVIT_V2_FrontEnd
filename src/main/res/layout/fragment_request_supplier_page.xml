<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.DashBord_User.RequestSupplierPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Toolbar with Back Button -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="379dp"
                android:layout_height="93dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/bungee"
                android:gravity="center"
                android:text="Requist Supplier"
                android:textSize="34sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="HardcodedText" />
        </RelativeLayout>

        <!-- Description -->
        <TextView
            android:id="@+id/car_detail"
            android:layout_width="322dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="@drawable/text_background"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:padding="16dp"
            android:layout_gravity="center"
            android:text="By requesting to become a supplier, your account will transition permanently to a supplier account. This change is irreversible, and you will no longer have access to features and privileges available to regular users. As a supplier, you will take on additional responsibilities, including managing products, orders, and providing excellent service to customers. Please ensure you are ready for this commitment before proceeding."
            android:textColor="#333333"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494" />

        <!-- Request Button -->
        <Button
            android:id="@+id/btn_request_supplier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_button"
            android:fontFamily="@font/bungee"
            android:text="@string/title_request_supplier"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_goback"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_marginTop="165dp"
            android:layout_marginBottom="120dp"
            android:background="#00000000"
            android:elevation="0dp"
            android:text="Go Back ?"
            android:textColor="#000"
            android:transitionName="btn_signUp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_rental"
            app:layout_constraintVertical_bias="0.255" />

    </LinearLayout>

</FrameLayout>
